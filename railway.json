{
    "build": {
      "builder": "DOCKERFILE",
      "dockerfile": "Dockerfile"
    },
    "deploy": {
      "startCommand": "python app.py",
      "healthcheckPath": "/",
      "healthcheckTimeout": 300,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10,
      "variables": {
        "PUBLIC_URL_BASE": {
          "description": "Auto-generated public URL",
          "value": "https://${RAILWAY_PUBLIC_DOMAIN}/downloads"
        }
      }
    }
  }